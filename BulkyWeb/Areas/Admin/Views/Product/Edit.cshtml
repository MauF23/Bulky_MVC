@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		@*<partial name="_Notification" /> using this asp class we can call any views as partial ones*@
		<form method="post">
			<input asp-for="Id" hidden /> @*when trying to update a recod if the id regissters as zero use this line to catch the actual id first*@
			<div class="border p-3 mt-4">
@* 				<div class="row pb-2">
					<h2 class="text-primary">Edit Product</h2>
					<hr />
				</div> *@
				@* the asp-validation-summary tag helper with the All word lists all the validation errors found, ModelOnly will only list the values that have errors but
				not the property specified, None does not display any error messages*@
				<div asp-validation-summary="ModelOnly"></div>
				<div class="mb-3 row p-1">
					<div class="form-floating py-2 col-12">
						@*asp-for is a asp tag helper that allows to specify what variable type from the model the input introduced is referencing*@
						<input asp-for="Title" class="form-control border-0 shadow" />
						<label asp-for="Title" class="ms-2"></label>
						@*sp-validation is a tag that checks if the value specify contains all the requirements of it's annotations defined in their
						model/class (Product in this case)*@
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
				</div>

				<div class="mb-3 row p-1">
					<div class="form-floating py-2 col-12">
						<textarea asp-for="Description" class="form-control border-0 shadow"></textarea> @* textarea must have it's own closing tag or will not work' *@
						<label asp-for="Description" class="ms-2"></label>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
				</div>

				<div class="mb-3 row p-1">
					<div class="form-floating py-2 col-12">
						<input asp-for="ISBN" class="form-control border-0 shadow" />
						<label asp-for="ISBN" class="ms-2"></label>
						<span asp-validation-for="ISBN" class="text-danger"></span>
					</div>
				</div>

				<div class="mb-3 row p-1">
					<div class="form-floating py-2 col-12">
						<input asp-for="Author" class="form-control border-0 shadow" />
						<label asp-for="Author" class="ms-2"></label>
						<span asp-validation-for="Author" class="text-danger"></span>
					</div>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" class="form-control border-0 shadow" />
					<label asp-for="ListPrice" class="ms-2"></label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price" class="form-control border-0 shadow" />
					<label asp-for="Price" class="ms-2"></label>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" class="form-control border-0 shadow" />
					<label asp-for="Price50" class="ms-2"></label>
					<span asp-validation-for="Price50" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" class="form-control border-0 shadow" />
					<label asp-for="Price100" class="ms-2"></label>
					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>

				<div class="row mt-3">
					<div class="col-6 col-md-3">
						@*Where the Create button calls the httpost Create function from the ProductController*@
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>

					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
							Back to List
						</a>
					</div>
				</div>
		</form>

	</div>
</div>


@* this is similar to a library c# import, we are referencing the _ValidationScriptsPartial located on the Shared Folder, it's basically a script
	That contains client side validations, only not-custom validations are client side*@
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

